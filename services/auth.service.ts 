import { supabase } from './supabase';
import { Toast } from '@capacitor/toast';

export const authService = {
  async signUp(email: string, password: string, fullName: string, phone: string) {
    try {
      const { data, error } = await supabase.auth.signUp({
        email,
        password,
        options: {
          data: {
            full_name: fullName,
            phone
          }
        }
      });

      if (error) throw error;

      await Toast.show({
        text: 'Registration successful! Please submit payment for verification.',
        duration: 'long',
        position: 'top'
      });

      return { data, error: null };
    } catch (error: any) {
      await Toast.show({
        text: error.message || 'Signup failed',
        duration: 'short',
        position: 'top'
      });
      return { data: null, error };
    }
  },

  async signIn(email: string, password: string) {
    try {
      const { data, error } = await supabase.auth.signInWithPassword({
        email,
        password
      });

      if (error) throw error;

      // Check if user is approved
      const { data: profile } = await supabase
        .from('profiles')
        .select('approval_status, payment_verified, rejection_reason')
        .eq('id', data.user.id)
        .single();

      if (profile?.approval_status === 'pending') {
        await supabase.auth.signOut();
        
        await Toast.show({
          text: 'Your account is awaiting admin approval. Please check your email.',
          duration: 'long',
          position: 'top'
        });
        
        return { data: null, error: { message: 'Account pending approval' } };
      }

      if (profile?.approval_status === 'rejected') {
        await supabase.auth.signOut();
        
        const reason = profile.rejection_reason || 'Payment verification failed';
        await Toast.show({
          text: `Registration rejected: ${reason}`,
          duration: 'long',
          position: 'top'
        });
        
        return { data: null, error: { message: 'Account rejected' } };
      }

      if (!profile?.payment_verified) {
        await supabase.auth.signOut();
        
        await Toast.show({
          text: 'Payment verification pending. Please contact admin.',
          duration: 'long',
          position: 'top'
        });
        
        return { data: null, error: { message: 'Payment not verified' } };
      }

      await Toast.show({
        text: 'Welcome back!',
        duration: 'short',
        position: 'top'
      });

      return { data, error: null };
    } catch (error: any) {
      await Toast.show({
        text: error.message || 'Login failed',
        duration: 'short',
        position: 'top'
      });
      return { data: null, error };
    }
  },

  async signOut() {
    const { error } = await supabase.auth.signOut();
    if (!error) {
      await Toast.show({
        text: 'Logged out successfully',
        duration: 'short',
        position: 'top'
      });
    }
    return { error };
  },

  async getCurrentUser() {
    const { data: { user }, error } = await supabase.auth.getUser();
    return { user, error };
  },

  async getProfile(userId: string) {
    const { data, error } = await supabase
      .from('profiles')
      .select('*')
      .eq('id', userId)
      .single();

    return { data, error };
  },

  async updateProfile(userId: string, updates: any) {
    const { data, error } = await supabase
      .from('profiles')
      .update(updates)
      .eq('id', userId)
      .select()
      .single();

    if (!error) {
      await Toast.show({
        text: 'Profile updated successfully',
        duration: 'short',
        position: 'top'
      });
    }

    return { data, error };
  },

  async submitPaymentVerification(
    paymentReference: string,
    paymentAmount: number,
    paymentMethod: string,
    paymentProofUrl?: string
  ) {
    try {
      const { data: { user } } = await supabase.auth.getUser();
      if (!user) throw new Error('Not authenticated');

      const { data, error } = await supabase
        .from('payment_verifications')
        .insert({
          user_id: user.id,
          payment_reference: paymentReference,
          payment_amount: paymentAmount,
          payment_method: paymentMethod,
          payment_proof_url: paymentProofUrl,
          status: 'pending'
        })
        .select()
        .single();

      if (error) throw error;

      await Toast.show({
        text: 'Payment verification submitted. Awaiting admin review.',
        duration: 'long',
        position: 'top'
      });

      return { data, error: null };
    } catch (error: any) {
      await Toast.show({
        text: error.message || 'Failed to submit payment verification',
        duration: 'short',
        position: 'top'
      });
      return { data: null, error };
    }
  },

  async checkPaymentStatus(userId: string) {
    const { data, error } = await supabase
      .from('payment_verifications')
      .select('*')
      .eq('user_id', userId)
      .order('created_at', { ascending: false })
      .limit(1)
      .single();

    return { data, error };
  }
};